/* screens bigger than 1366px */
html {
  height: 100%;
  width: 100%;
}

body {
  background-image: url("../images/bgjungle.jpg");
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-color: #cccccc;
  overflow: hidden;
}

#wrapper {
  height: 100%;
  width: 100%;
}

#playerWrapper {
  visibility: hidden;
  padding-left: 200px;
}

header {
  padding-left: 3.5%;
  padding-top: 15%;
  margin: 0 auto;
  width: 30%;
}
header h1 {
  font-family: 'IM Fell Great Primer', serif;
  color: white;
  font-size: 3em;
  text-shadow: 3px 3px 10px black;
}
header h3 {
  font-family: 'IM Fell Great Primer';
  font-style: italic;
  text-align: center;
  color: white;
  font-size: 1.5em;
  padding-right: 5%;
  text-shadow: 2px 2px 10px black;
}
header #volumeMeter {
  margin: 0 auto;
  width: 30%;
  padding-left: 2%;
}
header #volumeMeter:hover {
  opacity: 0.3;
}

#image {
  position: absolute;
  vertical-align: center;
  margin-left: auto;
  margin-right: auto;
}

footer * {
  position: absolute;
  left: 0px;
  bottom: 0px;
  height: 30px;
  width: 100%;
}

#circle {
  width: 50px;
  height: 50px;
  margin-bottom: 3%;
  left: 1.5%;
  background: #C21111;
  -moz-border-radius: 25px;
  -webkit-border-radius: 25px;
  border-radius: 25px;
}
#circle #triangle-right {
  position: relative;
  margin: 0 auto;
  vertical-align: middle;
  top: 35%;
  left: 2%;
  width: 0;
  height: 0;
  border-top: 6px solid transparent;
  border-left: 10px solid white;
  border-bottom: 6px solid transparent;
}

#circle:hover {
  background: #790C0C;
}

#circleWhite {
  width: 50px;
  height: 50px;
  left: 94.5%;
  margin-bottom: 3%;
  background: white;
  -moz-border-radius: 25px;
  -webkit-border-radius: 25px;
  border-radius: 25px;
}
#circleWhite #cross {
  position: relative;
  font-family: 'IM Fell Great Primer';
  margin: 0 auto;
  width: 80%;
  padding-left: 30%;
  font-size: 2em;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

#circleWhite:hover {
  cursor: default;
  background: #9E9E9E;
}

#popupYoutube {
  display: inline-block;
  position: fixed;
  left: 8%;
  bottom: 12%;
  margin: 0 auto;
  background: #970000;
  font-family: 'IM Fell Great Primer';
  font-size: 1em;
  color: white;
  border-radius: 5px;
  border-style: solid;
  border-width: 15px;
  border-color: #970000;
  visibility: hidden;
  overflow: hidden;
  white-space: nowrap;
}
#popupYoutube a {
  text-decoration: none;
  color: white;
  display: inline-block;
}
#weRecommend
{
  display: inline-block;
  padding-right: 20px;
}
#popupYoutube a:hover {
  text-decoration: underline;
}

#popupAbout {
  position: fixed;
  left: 54%;
  bottom: 12%;
  background: white;
  margin: 0 auto;
  font-family: 'IM Fell Great Primer';
  color: black;
  width: 37%;
  height: 12%;
  border-radius: 10px;
  border-style: solid;
  border-width: 15px;
  border-color: white;
  visibility: hidden;
}

header {
  padding-left: 3%;
}
header h1 {
  padding-left: 3%;
}
header #volumeMeter {
  padding-left: 4%;
}

@media all and (max-width: 800px) {
  header {
    width: 95%;
    margin: 0 auto;
    padding-right: 2%;
  }
  header h1 {
    width: 100%;
    font-size: 1.5em;
    padding-left: 14%;
  }
  header h3 {
    width: 100%;
    padding-left: 1%;
    font-size: 1.4em;
  }
  header #volumeMeter {
    padding-left: 16%;
  }
  header #volumeMeter #image {
    max-width: 50px;
    max-height: 50px;
  }

  footer #circle #popupYoutube {
    display: inline-block;
    bottom: 14%;
    left: 2%;
    width: 400px;
    font-size: 0.8em;
  }
  footer #circle #popupYoutube a {
    padding-left: 270px;
  }
  footer #circleWhite {
    left: 82%;
  }
  footer #circleWhite #popupAbout {
    left: 2%;
    right: 2%;
    height: 20%;
    bottom: 14%;
    width: 78%;
    font-size: 0.8em;
  }
}

@media all and (min-width: 1500px) {
	header h1 {
		padding-left: 6%;
	}
}

@media all and (min-width: 1800px) {
	header {
		padding-right: 3%;
	}
	header h1 {
		padding-left: 14%;
	}
}


@media all and (min-width: 2000px) {
	header {
		padding-right: 5%;
	}
	header h1 {
		padding-left: 18%;
	
	}
}
